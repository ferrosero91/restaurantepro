{
  "name": "restaurant-pro",
  "version": "1.0.0",
  "description": "Sistema de Facturaci√≥n Multitenant para Restaurantes - RestaurantPro",
  "main": "server.js",
  "bin": "server.js",
  "pkg": {
    "assets": [
      "views/**/*",
      "public/**/*",
      "node_modules/ejs/**/*",
      "node_modules/bootstrap/dist/**/*",
      "node_modules/jquery/dist/**/*",
      "node_modules/sweetalert2/dist/**/*",
      "node_modules/select2/dist/**/*",
      "node_modules/select2-bootstrap-5-theme/dist/**/*",
      "node_modules/bootstrap-icons/font/**/*"
    ],
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "pkg . --public --target node18-win-x64",
    "install:db": "node scripts/install.js",
    "create-superadmin": "node scripts/create_superadmin.js",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart"
  },
  "dependencies": {
    "axios": "^1.13.4",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "body-parser": "^1.20.2",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "connect-session-sequelize": "^7.1.7",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "dotenv": "^16.6.1",
    "ejs": "^3.1.9",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.19.0",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "jquery": "^3.7.1",
    "jsonwebtoken": "^9.0.3",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.14.2",
    "select2": "^4.1.0-rc.0",
    "select2-bootstrap-5-theme": "^1.3.0",
    "sweetalert2": "^11.15.10",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "pkg": "^5.8.1"
  }
}
