        // ===== CATEGORÍAS =====
        async function cargarCategorias() {
            try {
                const response = await fetch('/categorias');
                const categorias = await response.json();
                
                const lista = document.getElementById('listaCategorias');
                if (categorias.length === 0) {
                    lista.innerHTML = '<div class="col-12"><p class="text-muted">No hay categorías creadas</p></div>';
                    return;
                }
                
                lista.innerHTML = categorias.map(cat => `
                    <div class="col-md-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h6 class="mb-0">
                                        <span class="badge" style="background-color: ${cat.color}">${cat.nombre}</span>
                                    </h6>
                                    <div class="btn-group btn-group-sm">
                                        <button class="btn btn-outline-primary" onclick="editarCategoria(${cat.id}, '${cat.nombre}', '${cat.descripcion || ''}', '${cat.color}', ${cat.orden})">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button class="btn btn-outline-danger" onclick="eliminarCategoria(${cat.id}, '${cat.nombre}')">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </div>
                                <p class="small text-muted mb-0">${cat.descripcion || 'Sin descripción'}</p>
                                <small class="text-muted">Orden: ${cat.orden}</small>
                            </div>
                        </div>
                    </div>
                `).join('');
            } catch (error) {
                console.error('Error al cargar categorías:', error);
            }
        }

        async function guardarCategoria() {
            const form = document.getElementById('formNuevaCategoria');
            const formData = new FormData(form);
            const data = Object.fromEntries(formData);

            try {
                const response = await fetch('/categorias', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                if (response.ok) {
                    alert('Categoría creada exitosamente');
                    bootstrap.Modal.getInstance(document.getElementById('modalNuevaCategoria')).hide();
                    form.reset();
                    cargarCategorias();
                } else {
                    const error = await response.json();
                    alert('Error: ' + error.error);
                }
            } catch (error) {
                alert('Error al crear categoría');
            }
        }

        function editarCategoria(id, nombre, descripcion, color, orden) {
            document.getElementById('edit_cat_id').value = id;
            document.getElementById('edit_cat_nombre').value = nombre;
            document.getElementById('edit_cat_descripcion').value = descripcion;
            document.getElementById('edit_cat_color').value = color;
            document.getElementById('edit_cat_orden').value = orden;
            new bootstrap.Modal(document.getElementById('modalEditarCategoria')).show();
        }

        async function actualizarCategoria() {
            const form = document.getElementById('formEditarCategoria');
            const formData = new FormData(form);
            const data = Object.fromEntries(formData);
            const id = data.id;
            delete data.id;

            try {
                const response = await fetch('/categorias/' + id, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                if (response.ok) {
                    alert('Categoría actualizada exitosamente');
                    bootstrap.Modal.getInstance(document.getElementById('modalEditarCategoria')).hide();
                    cargarCategorias();
                } else {
                    const error = await response.json();
                    alert('Error: ' + error.error);
                }
            } catch (error) {
                alert('Error al actualizar categoría');
            }
        }

        async function eliminarCategoria(id, nombre) {
            if (!confirm(`¿Eliminar la categoría "${nombre}"?`)) return;

            try {
                const response = await fetch('/categorias/' + id, {
                    method: 'DELETE'
                });

                if (response.ok) {
                    alert('Categoría eliminada');
                    cargarCategorias();
                } else {
                    const error = await response.json();
                    alert('Error: ' + error.error);
                }
            } catch (error) {
                alert('Error al eliminar categoría');
            }
        }
        
