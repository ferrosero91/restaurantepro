<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Usuarios - RestaurantPro</title>
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/vendor/bootstrap-icons/bootstrap-icons.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        }
        
        .page-header {
            background: white;
            border-radius: 8px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.05);
        }
        
        .table-card {
            background: white;
            border-radius: 8px;
            padding: 1.5rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.05);
        }
        
        .table thead th {
            background: #f8f9fa;
            border-bottom: 2px solid #dee2e6;
            color: #2c3e50;
            font-weight: 600;
            font-size: 0.875rem;
            text-transform: uppercase;
            padding: 1rem 0.75rem;
        }
        
        .table tbody tr:hover {
            background: #f8f9fa;
        }
        
        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: inline-flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 700;
            font-size: 1.1rem;
        }
        
        .badge-rol {
            padding: 0.5rem 0.875rem;
            font-weight: 500;
            border-radius: 20px;
        }
        
        .btn-primary {
            background-color: #3498db;
            border-color: #3498db;
        }
        
        .btn-primary:hover {
            background-color: #2980b9;
            border-color: #2980b9;
        }
    </style>
</head>
<body>
    <%- include('../partials/navbar') %>
    
    <main class="py-4">
        <div class="container-fluid px-3 px-md-4">
            
            <div class="page-header">
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                    <div>
                        <h2 class="mb-1" style="color: #2c3e50; font-weight: 700;">
                            <i class="bi bi-person-badge me-2"></i>Gestión de Usuarios
                        </h2>
                        <p class="text-muted mb-0">Administra los usuarios y sus permisos</p>
                    </div>
                    <a href="/usuarios/nuevo" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>Nuevo Usuario
                    </a>
                </div>
            </div>

            <div class="table-card">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr>
                                <th>Usuario</th>
                                <th>Email</th>
                                <th>Teléfono</th>
                                <th>Rol</th>
                                <th>Estado</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (usuarios.length === 0) { %>
                                <tr>
                                    <td colspan="6" class="text-center text-muted py-5">
                                        <i class="bi bi-inbox" style="font-size: 3rem; opacity: 0.3;"></i>
                                        <p class="mt-3">No hay usuarios registrados</p>
                                    </td>
                                </tr>
                            <% } else { %>
                                <% usuarios.forEach(usuario => { %>
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center gap-2">
                                                <div class="user-avatar">
                                                    <%= (usuario.nombres || usuario.email).charAt(0).toUpperCase() %>
                                                </div>
                                                <div>
                                                    <strong><%= usuario.nombres %> <%= usuario.apellidos %></strong>
                                                </div>
                                            </div>
                                        </td>
                                        <td><%= usuario.email %></td>
                                        <td><%= usuario.telefono || '-' %></td>
                                        <td>
                                            <span class="badge-rol <%= usuario.rol_nombre === 'Administrador' ? 'bg-danger' : usuario.rol_nombre === 'Gerente' ? 'bg-warning' : 'bg-primary' %>">
                                                <%= usuario.rol_nombre || 'Sin rol' %>
                                            </span>
                                        </td>
                                        <td>
                                            <% if (usuario.activo) { %>
                                                <span class="badge bg-success">Activo</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">Inactivo</span>
                                            <% } %>
                                        </td>
                                        <td class="text-center">
                                            <a href="/usuarios/<%= usuario.id %>/editar" class="btn btn-sm btn-outline-primary me-1">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button class="btn btn-sm btn-outline-danger" onclick="eliminarUsuario(<%= usuario.id %>)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </main>

    <%- include('../partials/footer') %>
    
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script>
        function eliminarUsuario(id) {
            if (confirm('¿Estás seguro de eliminar este usuario?')) {
                fetch(`/usuarios/${id}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Error al eliminar usuario');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error al eliminar usuario');
                });
            }
        }
    </script>
</body>
</html>
