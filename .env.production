# Configuración de Producción para Dockploy
# Dominio: restaurante.gestionxpress.app

# Base de Datos
DB_HOST=mysql
DB_USER=restaurante_user
DB_PASSWORD=CHANGE_THIS_PASSWORD_IN_DOCKPLOY
DB_NAME=restaurante_saas
DB_POOL_SIZE=20

# Servidor
PORT=3000
HOST=0.0.0.0
NODE_ENV=production

# Seguridad - GENERAR NUEVO EN DOCKPLOY
# Generar con: openssl rand -hex 32
SESSION_SECRET=CHANGE_THIS_SECRET_IN_DOCKPLOY

# Rate Limiting (más estricto en producción)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de Sesión (24 horas)
SESSION_MAX_AGE=86400000

# CORS - Dominio de producción
ALLOWED_ORIGINS=https://restaurante.gestionxpress.app,http://restaurante.gestionxpress.app

# Uploads
MAX_FILE_SIZE=5242880

# Logs
LOG_LEVEL=info

# MySQL Root Password (solo para docker-compose)
DB_ROOT_PASSWORD=CHANGE_THIS_ROOT_PASSWORD_IN_DOCKPLOY
